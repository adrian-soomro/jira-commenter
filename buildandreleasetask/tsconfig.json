{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2019"]
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*test*.ts"],
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true
}
